<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tNc"
    android:paddingTop="80dp"
    android:paddingHorizontal="20sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This app is only for referance. It is sincerely adviced to check your reports to Doctors."
        android:textSize="30dp"
        android:paddingBottom="50sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*ONLY FOR ADULTS."
            android:textSize="20dp"
            android:textColor="#E40808"/>


    <Button
        android:id="@+id/subtnc"
        android:background="#52E414"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="accepted"
        tools:ignore="InvalidId"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <Button
            android:id="@+id/no"
            android:background="#E30F0F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="decline"
            tools:ignore="InvalidId" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
